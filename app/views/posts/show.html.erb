<!-- app/views/comments/show.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: black;
      padding: 10px 20px;
      margin-bottom: 20px;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #fff;
    }

    .brand {
      text-decoration: none;
      color: #fff;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .nav-list {
      list-style: none;
      display: flex;
      margin: 0;
      padding: 0;
    }

    .nav-list li {
      margin-right: 20px;
    }

    .nav-list a {
      text-decoration: none;
      color: #fff;
      font-weight: bold;
      transition: color 0.3s ease-in-out;
    }

    .nav-list a:hover {
      color: #ffc107;
    }

    .container {
      width: 80%;
      margin: 0 auto;
    }

    .btn {
      padding: 8px 15px;
      border-radius: 5px;
      text-decoration: none;
      cursor: pointer;
    }

    .btn-primary {
      background-color: #ffc107;
      color: #fff;
    }

    .post {
      margin-bottom: 20px;
      padding: 20px;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
      margin-bottom: 10px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      margin-bottom: 10px;
    }

    form {
      margin-top: 20px;
      display: flex;
      flex-direction: column; /* Adjusted flex direction for better stacking */
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    textarea {
      width: 100%; /* Adjusted textarea width to full */
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 10px;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar">
      <a href="#" class="brand">Facebook</a>
      <ul class="nav-list">
        <li><%= link_to 'Sign in', new_user_session_path %></li>
        <li><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete } %></li>
      </ul>
    </nav>
  </header>

  <div class="container">
    <h1>Post Details</h1>

    <div class="post">
      <p><strong>Created by:</strong> <%= @post.user.email %></p>
      <p><strong>Content:</strong> <%= @post.content %></p>
      <p><strong>No of Comments:</strong> <%= @post.comments.count %></p>
     
    </div>

    <h2>Comments</h2>
    <ul>
      <% @comments.each do |comment| %>
        <li><strong><%= comment.user.user_name %>:</strong> <%= comment.content %></li>
        <%= link_to 'Like', comment_likes_path(comment), method: :post, class: 'btn btn-like', remote: true %>
        <p><strong>No of Likes:</strong> <%= comment.likes.count %></p>
      <% end %>
    </ul>


    <!-- Form to create a new comment -->
    <%= form_with(model: [@post, Comment.new], local: true) do |form| %>
      <div>
        <%= form.label :content %><br>
        <%= form.text_area :content, rows: 3 %>
      </div>

      <div class="buttons">
        <%= form.submit "Add Comment", class: 'btn btn-primary' %>
        <%= link_to 'Back to Posts', posts_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</body>
</html>


